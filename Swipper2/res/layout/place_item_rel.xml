<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
   	<ImageView
	    android:id="@+id/placeIcon"
	    android:layout_height="match_parent"
	    android:layout_width="wrap_content"	 
	    android:paddingLeft="12dp"
	    android:paddingRight="12dp"
	    android:layout_marginRight="15dp" />
   	
   	<LinearLayout
   	    android:layout_height="wrap_content"
   	    android:layout_width="0dp"
   	    android:layout_weight="1"
   	    android:orientation="vertical" >
        
		<LinearLayout
		    android:id="@+id/firstLineLayout"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content" >
	
			<com.globant.labs.swipper2.widget.SwipperTextView 
			    android:id="@+id/placeName"
			    android:layout_height="wrap_content"
		    	android:layout_width="wrap_content"
		    	android:layout_weight="1"
			    android:textColor="@color/dark_font"
			    android:textSize="18sp"
			    android:paddingTop="10dp"
			    android:ellipsize="end"
				android:maxLines="1"
			    app:fontName="roboto_bold.ttf" />
			
			<ImageView
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:layout_gravity="bottom"
			    android:padding="4dp"
			    android:src="@drawable/text_separator" />
			
			<com.globant.labs.swipper2.widget.SwipperTextView 
			    android:id="@+id/placeDistance"
			    android:layout_height="wrap_content"
		    	android:layout_width="wrap_content"
		    	android:singleLine="true"
		    	android:ellipsize="none"
			    android:textColor="@color/dark_font"    
			    app:fontName="roboto_medium.ttf" />	
		    	
		</LinearLayout>
		
		<com.globant.labs.swipper2.widget.SwipperTextView 
		    android:id="@+id/placeAddress"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:textColor="@color/light_font"
		    app:fontName="roboto_italic.ttf" />
		
		<com.globant.labs.swipper2.widget.SwipperTextView 
		    android:id="@+id/placeCity"
	   	    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:textColor="@color/light_font"
		    app:fontName="roboto_italic.ttf"
		    android:paddingBottom="10dp"/>
	
	</LinearLayout>
	
	<ImageButton
	    android:id="@+id/navButton"
	    android:src="@drawable/nav_button"
	    android:background="@android:color/transparent"
	    android:layout_height="match_parent"
	    android:layout_width="wrap_content"
	    android:padding="20dp" />
      
</LinearLayout>
