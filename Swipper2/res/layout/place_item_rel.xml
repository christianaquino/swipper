<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:id="@+id/placeIconLayout"
        android:layout_height="match_parent"
	    android:layout_width="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true"
	    android:background="@color/orange"
	    android:layout_marginRight="15dp" >
       
       	<ImageView
		    android:id="@+id/placeIcon"
		    android:layout_height="match_parent"
		    android:layout_width="wrap_content"	 
		    android:paddingLeft="12dp"
		    android:paddingRight="12dp" />
        
    </LinearLayout>

	<LinearLayout
	    android:id="@+id/firstLineLayout"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_toRightOf="@+id/placeIconLayout"
	    android:layout_toLeftOf="@+id/navButton" >

		<com.globant.labs.swipper2.widget.SwipperTextView 
		    android:id="@+id/placeName"
		    android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"
		    android:textColor="@color/dark_font"
		    android:textSize="18sp"
		    android:paddingTop="10dp"
		    android:ellipsize="end"
			android:maxLines="1"
		    app:fontName="roboto_regular.ttf" />
		
		<com.globant.labs.swipper2.widget.SwipperTextView 
		    android:textColor="@color/light_font"
		    android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"
		    android:textSize="18sp"
		    android:text="|"
		    android:paddingLeft="4dp"
		    android:paddingRight="4dp"
		    android:ellipsize="none"
		    app:fontName="roboto_regular.ttf" />
		
		<com.globant.labs.swipper2.widget.SwipperTextView 
		    android:id="@+id/placeDistance"
		    android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"
	    	android:singleLine="true"
	    	android:ellipsize="none"
		    android:textColor="@color/dark_font"    
		    app:fontName="roboto_regular.ttf" />	
	    	
	</LinearLayout>
	
	<com.globant.labs.swipper2.widget.SwipperTextView 
	    android:id="@+id/placeAddress"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_toRightOf="@+id/placeIconLayout"
	    android:layout_toLeftOf="@+id/navButton"
	    android:layout_below="@+id/firstLineLayout"
	    android:textColor="@color/light_font"
	    app:fontName="roboto_light.ttf" />
	
	<com.globant.labs.swipper2.widget.SwipperTextView 
	    android:id="@+id/placeCity"
   	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_toRightOf="@+id/placeIconLayout"
	    android:layout_toLeftOf="@+id/navButton"
	    android:layout_below="@+id/placeAddress"
	    android:textColor="@color/light_font"
	    app:fontName="roboto_thin.ttf"
	    android:paddingBottom="10dp"/>
	
	<ImageButton
	    android:id="@+id/navButton"
	    android:src="@drawable/nav_button"
	    android:background="@android:color/transparent"
	    android:layout_height="match_parent"
	    android:layout_width="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:padding="20dp"
	    app:layout_gravity="right|fill_vertical" />
      
</RelativeLayout>
