<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <android.support.v7.widget.GridLayout	    
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/dark_grey"
	    android:padding="15dp"
	    app:columnCount="4" >
	    
        <ImageView
            android:layout_width="wrap_content"
            app:layout_rowSpan="2"
            app:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/det_ico_location" />
        
        <com.globant.labs.swipper2.widget.SwipperTextView 
            android:layout_width="wrap_content"
            app:layout_gravity="fill_horizontal|top"
            android:textColor="@color/real_white"
            app:fontName="roboto_regular.ttf"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Av. Federico Juansito Lacroze 2301" />
        
        <ImageView
            android:layout_width="wrap_content"
            app:layout_gravity="center_vertical"
            app:layout_rowSpan="2"
            android:layout_marginRight="10dp"
            android:src="@drawable/det_text_separator" />
        
        <com.globant.labs.swipper2.widget.SwipperTextView 
            android:layout_width="wrap_content"
            app:layout_gravity="center_vertical"
            app:layout_rowSpan="2"
            android:textColor="@color/real_white"
            app:fontName="roboto_regular.ttf"
            android:textSize="16sp"
            android:text="0.1km" />
        
        <com.globant.labs.swipper2.widget.SwipperTextView 
            android:layout_width="wrap_content"
            app:layout_gravity="fill_horizontal"
            android:textColor="@color/real_white"
            app:fontName="roboto_regular.ttf"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Resistencia, Chaco, Argentina" />  
        
        <ImageView
            android:layout_width="wrap_content"
            app:layout_gravity="center_vertical"
            android:src="@drawable/det_ico_phone" />
        
        <com.globant.labs.swipper2.widget.SwipperTextView 
            app:layout_gravity="fill_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/real_white"
            app:fontName="roboto_light.ttf"
            android:textSize="18sp"
            android:text="(011) 5896471" />          
        
        <android.support.v7.widget.Space
            android:layout_width="wrap_content"
            app:layout_rowSpan="2" />
        
        <ImageView
            android:layout_width="wrap_content"
            app:layout_gravity="center"
            app:layout_rowSpan="2"
            android:src="@drawable/nav_button" />
        
        <ImageView
            android:layout_width="wrap_content"
            app:layout_gravity="center_vertical"
            android:src="@drawable/det_ico_watch" />
        
        <com.globant.labs.swipper2.widget.SwipperTextView 
            app:layout_gravity="fill_horizontal"
            android:textColor="@color/real_white"
            app:fontName="roboto_light.ttf"
            android:textSize="18sp"
            android:text="10:30 am - 20:30 pm" />  
           
    
    </android.support.v7.widget.GridLayout>

</LinearLayout>
