<?xml version="1.0" encoding="utf-8"?>
<com.globant.labs.swipper2.widget.RealityPlaceView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:padding="5dp" >

    <com.globant.labs.swipper2.widget.SwipperTextView
        android:id="@+id/placeName_monocle"
        style="@style/Swipper.Monocle.InfoWindow.PlaceName.Text" />

    <ImageView
        android:id="@+id/arrow_info_window_monocle"
        style="@style/Swipper.Monocle.InfoWindow.Arrow.Image"
        android:contentDescription="@string/imageArrowInfoWindowMonocleDescription" />

    <com.globant.labs.swipper2.widget.SwipperTextView
        android:id="@+id/distance_monocle"
        style="@style/Swipper.Monocle.InfoWindow.PlaceDistance.Text" />

</com.globant.labs.swipper2.widget.RealityPlaceView>