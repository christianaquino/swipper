<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/item_reality_monocle_width"
    android:layout_height="@dimen/item_reality_monocle_height"
    android:background="#AA0099CC"
    android:padding="4dp" >

    <com.globant.labs.swipper2.widget.SwipperTextView
        android:id="@+id/stv_place_name"
        style="@style/Swipper.Monocle.Reality.PlaceName" />

    <com.globant.labs.swipper2.widget.SwipperTextView
        android:id="@+id/stv_place_distance"
        style="@style/Swipper.Monocle.Reality.PlaceDistance" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/det_ico_location"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>