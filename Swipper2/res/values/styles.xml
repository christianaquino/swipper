<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionButtonStyle">@style/MyActionButtonStyle</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/orange</item>
        <item name="android:height">60dp</item>

        <!-- Support library compatibility -->
        <item name="background">@color/orange</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <!-- <item name="logo">@drawable/action_logo</item> -->
    </style>

    <style name="MyActionButtonStyle" parent="@style/Widget.AppCompat.ActionButton">
        <!-- <item name="android:background">@color/action</item> -->
        <!-- <item name="android:padding">0dp</item> -->
    </style>

    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/dark_font</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Swipper.Monocle.Reality" parent="@android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Swipper.Monocle.Brand" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_margin">@dimen/brand_monocle_margin</item>
        <item name="android:textColor">@color/monocle_brand</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontName">roboto_bold_italic.ttf</item>
    </style>

    <style name="Swipper.Monocle.Radar" parent="@android:style/Widget">
        <item name="android:layout_width">@dimen/radar_monocle_size</item>
        <item name="android:layout_height">@dimen/radar_monocle_size</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">@dimen/radar_monocle_margin</item>
    </style>

    <style name="Swipper.Monocle.Radar.Background" parent="@style/Swipper.Monocle.Radar">
        <item name="android:src">@drawable/radar_background</item>
    </style>

    <style name="Swipper.Monocle.Radar.North" parent="@android:style/Widget">
        <item name="android:layout_width">@dimen/radar_north_monocle_size</item>
        <item name="android:layout_height">@dimen/radar_north_monocle_size</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:shadowColor">#FF8800</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="Swipper.Monocle.Radar.Places" parent="@style/Swipper.Monocle.Radar"></style>

    <style name="Swipper.Monocle.Reality.PlaceName" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontName">roboto_bold_italic.ttf</item>
    </style>

    <style name="Swipper.Monocle.Reality.PlaceDistance" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/stv_place_name</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontName">roboto_bold_italic.ttf</item>
    </style>

    <style name="Swipper.Monocle.InfoWindow.Text" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontName">roboto_light.ttf</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="Swipper.Monocle.InfoWindow.PlaceName.Text" parent="@style/Swipper.Monocle.InfoWindow.Text">
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="Swipper.Monocle.InfoWindow.PlaceDistance.Text" parent="@style/Swipper.Monocle.InfoWindow.Text">
        <item name="android:layout_below">@id/placeName_monocle</item>
        <item name="android:drawableLeft">@drawable/distance_icon</item>
        <item name="android:drawablePadding">4dp</item>
    </style>
    
    <style name="Swipper.Monocle.InfoWindow.Arrow.Image" parent="@android:style/Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:src">@drawable/details_arrow</item>
    </style>

</resources>